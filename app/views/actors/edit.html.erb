<h1>Editing actor</h1>

<% form_for(@actor) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :health %><br />
    <%= f.text_field :health %>
  </p>
  <p>
    <%= f.label :initiative %><br />
    <%= f.text_field :initiative %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @actor %> |
<%= link_to 'Back', actors_path %>