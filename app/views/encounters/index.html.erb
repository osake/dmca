<h1>Listing encounters</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Experience</th>
    <th>Actors</th>
  </tr>

<% @encounters.each do |encounter| %>
  <tr>
    <td><%=h encounter.name %></td>
    <td><%=h encounter.experience %></td>
    <td><%= encounter.actors.count %></td>
    <td><%= link_to 'Play', encounter %></td>
    <td><%= link_to 'Edit', edit_encounter_path(encounter) %></td>
    <td><%= link_to 'Destroy', encounter, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New encounter', new_encounter_path %> |
<%= link_to 'Actors', actors_path %>